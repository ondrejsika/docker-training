FROM debian:11-slim
WORKDIR /app
RUN apt-get update && \
  apt-get install --no-install-recommends -y \
    python3=3.9.2-3 \
    python3-pip=20.3.4-4+deb11u1 && \
  rm -rf /var/lib/apt/lists/*
COPY requirements.txt .
RUN pip3 install -r requirements.txt --no-cache-dir
COPY . .
CMD [ "python3", "app.py" ]
EXPOSE 80
